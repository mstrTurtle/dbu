{
    "files.associations": {
        "*.tcc": "cpp",
        "*.hta": "html",
        "*.cpp": "cpp",
        "*.yy": "yacc",
        "*.S": "plaintext",
        "*.jsp": "html",
        "iostream": "cpp",
        "string": "cpp"
    },
    // 词法高亮设置（COMMENT）
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment", // COMMENT设置
                "settings": {
                    "fontStyle": "",
                    "foreground": "#00fd87",
                }
            },
            {
                "scope": "entity.name.class",
                "settings": {
                    "foreground": "#ffd105",
                }
            },
        ]
    },
    // 语法高亮设置
    // 
    // 有个人在so上犯了同样的错误，在tokenColor...里鼓捣。
    // https://stackoverflow.com/questions/71629308/vs-code-textmaterules-doesnt-change-the-modifier-i-want
    // 还好有个人告诉了他正确的方法：放semanticTokenColor...里。
    //
    // 原理是Semantic Highlight
    // https://code.visualstudio.com/api/language-extensions/semantic-highlight-guide
    // 
    // 具体操作请参见：
    // https://medium.com/@danromans/how-to-customize-semantic-token-colorization-with-visual-studio-code-ac3eab96141b
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            // different color for all constants
            "property.readonly": {
                "foreground": "#d2baff",
                "italic": true
            },
            "property": "#d2baff",
            // make all symbol declarations bold and italic
            "method.declaration": {
                "foreground": "#ffb0b0",
                "bold": false,
                "italic": false
            },
            "class.declaration": {
                "foreground": "#fd6b6b",
                "bold": false,
                "italic": false
            }
        }
    },
    "files.insertFinalNewline": true // 加尾随新行
}
